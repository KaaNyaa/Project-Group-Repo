@model IEnumerable<SSD_Lab1.Models.Message>

@{
    ViewData["Title"] = "Message Board";
}

<h2>Message Board</h2>

<form asp-controller="Messages" asp-action="Create" method="post">
    <div class="form-group">
        <textarea name="content" class="form-control" rows="3" placeholder="Write a message..."></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Post Message</button>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-2">@TempData["Error"]</div>
}

<hr />

<h4>Messages</h4>
@if (!Model.Any())
{
    <p>No messages yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var msg in Model)
        {
            <li class="list-group-item">
                <strong>@msg.User.FirstName</strong>
                <strong>@msg.User?.LastName</strong>:
                @msg.Content
                <br />
                <small class="text-muted">@msg.SentAt.ToString("g")</small>
            </li>
        }
    </ul>
}
